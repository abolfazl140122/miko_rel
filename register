    <div class="form-container">
        <div class="form-header">
            <h1>ایجاد حساب کاربری</h1>
            <p>به همیار بپیوندید و دوستان جدیدی پیدا کنید!</p>
        </div>

        <form id="register-form" novalidate>
            <!-- تصویر پروفایل -->
            <div class="profile-pic-group">
                <img id="profile-preview" src="data:image/svg+xml;base64," alt="Profile Preview">
                <div>
                    <label for="profilePic">انتخاب تصویر</label>
                    <input type="file" id="profilePic" accept="image/*">
                    <div class="error-message" id="profilePic-error"></div>
                </div>
            </div>

            <!-- نام نمایشی -->
            <div class="input-group">
                <label for="displayName">نام نمایشی</label>
                <input type="text" id="displayName" placeholder="نامی که دیگران می‌بینند" required>
                <div class="error-message" id="displayName-error"></div>
            </div>

            <!-- نام کاربری -->
            <div class="input-group">
                <label for="username">نام کاربری (انگلیسی)</label>
                <input type="text" id="username" placeholder="فقط حروف انگلیسی، اعداد و _" required pattern="^[a-zA-Z0-9_]{3,15}$">
                <div class="error-message" id="username-error"></div>
            </div>

            <!-- شماره موبایل -->
            <div class="input-group">
                <label for="mobile">شماره موبایل</label>
                <input type="tel" id="mobile" placeholder="مثال: 09123456789" required>
                <div class="error-message" id="mobile-error"></div>
            </div>

            <!-- سن و جنسیت (در یک ردیف) -->
            <div style="display: flex; gap: 20px;">
                <div class="input-group" style="width: 50%;">
                    <label for="age">سن</label>
                    <input type="number" id="age" placeholder="مثال: 25" required min="18" max="99">
                    <div class="error-message" id="age-error"></div>
                </div>
                <div class="input-group" style="width: 50%;">
                    <label for="gender">جنسیت</label>
                    <select id="gender" required>
                        <option value="" disabled selected>انتخاب کنید...</option>
                        <option value="male">مرد</option>
                        <option value="female">زن</option>
                        <option value="other">دیگر</option>
                    </select>
                    <div class="error-message" id="gender-error"></div>
                </div>
            </div>
            
            <!-- رمز عبور -->
            <div class="input-group">
                <label for="password">رمز عبور</label>
                <input type="password" id="password" placeholder="حداقل ۸ کاراکتر" required>
                <div class="error-message" id="password-error"></div>
            </div>
            <div class="input-group">
                <label for="passwordConfirm">تکرار رمز عبور</label>
                <input type="password" id="passwordConfirm" placeholder="رمز عبور را دوباره وارد کنید" required>
                <div class="error-message" id="passwordConfirm-error"></div>
            </div>

            <!-- درباره من -->
            <div class="input-group">
                <label for="bio">درباره من (اختیاری)</label>
                <textarea id="bio" placeholder="کمی درباره خودتان بنویسید..."></textarea>
            </div>

            <!-- علاقه‌مندی‌ها -->
            <div class="input-group">
                <label for="interests">علاقه‌مندی‌ها (اختیاری)</label>
                <input type="text" id="interests" placeholder="با ویرگول (،) جدا کنید. مثال: فیلم، موسیقی، ورزش">
            </div>

            <!-- قوانین و مقررات -->
            <div class="input-group terms-group">
                <input type="checkbox" id="terms" required>
                <label for="terms">با <a href="#">قوانین و مقررات</a> موافقم.</label>
                <div class="error-message" id="terms-error"></div>
            </div>
            
            <button type="submit" id="submit-btn" disabled>ثبت‌نام</button>

            <div id="form-status"></div>
        </form>
    </div>

    <script>
        // --- CONFIG ---
        const PROXY_URL = 'https://miko.freehost.io/firebase_proxy.php';
        const SHARED_SECRET = 'miko1234';

        // --- DOM Elements ---
        const form = document.getElementById('register-form');
        const submitBtn = document.getElementById('submit-btn');
        const formStatus = document.getElementById('form-status');
        const inputs = {
            profilePic: document.getElementById('profilePic'),
            displayName: document.getElementById('displayName'),
            username: document.getElementById('username'),
            mobile: document.getElementById('mobile'),
            age: document.getElementById('age'),
            gender: document.getElementById('gender'),
            password: document.getElementById('password'),
            passwordConfirm: document.getElementById('passwordConfirm'),
            terms: document.getElementById('terms')
        };
        const profilePreview = document.getElementById('profile-preview');

        // --- Event Listeners ---
        
        // Profile picture preview
        inputs.profilePic.addEventListener('change', () => {
            const file = inputs.profilePic.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    profilePreview.src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });

        // Real-time validation on input change
        for (const key in inputs) {
            inputs[key].addEventListener('input', () => {
                validateField(key);
                checkFormValidity();
            });
        }

        // Form submission
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            if (validateAllFields()) {
                await submitForm();
            }
        });


        // --- Validation Logic ---
        
        function showError(field, message) {
            const errorElement = document.getElementById(`${field}-error`);
            errorElement.textContent = message;
            errorElement.style.display = 'block';
        }

        function hideError(field) {
            document.getElementById(`${field}-error`).style.display = 'none';
        }

        function validateField(field) {
            const input = inputs[field];
            let isValid = true;
            
            // Simple validation based on type and required attribute
            if (input.required && !input.value.trim() && input.type !== 'checkbox') {
                showError(field, 'این فیلد الزامی است.');
                isValid = false;
            } else {
                hideError(field);
            }

            // Specific validations
            switch(field) {
                case 'username':
                    if (!/^[a-zA-Z0-9_]{3,15}$/.test(input.value)) {
                        showError(field, 'نام کاربری باید 3 تا 15 کاراکتر و شامل حروف انگلیسی، عدد یا _ باشد.');
                        isValid = false;
                    }
                    break;
                case 'mobile':
                    if (!/^09\d{9}$/.test(input.value)) {
                        showError(field, 'فرمت شماره موبایل صحیح نیست. (مثال: 09123456789)');
                        isValid = false;
                    }
                    break;
                case 'age':
                    if (input.value < 18 || input.value > 99) {
                        showError(field, 'سن شما باید بین 18 تا 99 سال باشد.');
                        isValid = false;
                    }
                    break;
                case 'password':
                    if (input.value.length < 8) {
                        showError(field, 'رمز عبور باید حداقل 8 کاراکتر باشد.');
                        isValid = false;
                    }
                    // Re-validate confirmation if password changes
                    validateField('passwordConfirm');
                    break;
                case 'passwordConfirm':
                    if (input.value !== inputs.password.value) {
                        showError(field, 'رمزهای عبور با یکدیگر مطابقت ندارند.');
                        isValid = false;
                    }
                    break;
                case 'terms':
                     if (!input.checked) {
                        showError(field, 'شما باید با قوانین و مقررات موافقت کنید.');
                        isValid = false;
                    }
                    break;
            }
            return isValid;
        }

        function validateAllFields() {
            let isFormValid = true;
            for (const key in inputs) {
                if (!validateField(key)) {
                    isFormValid = false;
                }
            }
            return isFormValid;
        }
        
        function checkFormValidity() {
            submitBtn.disabled = !validateAllFields();
        }

        // --- Form Submission ---
        async function submitForm() {
            submitBtn.disabled = true;
            submitBtn.textContent = 'در حال ارسال...';
            formStatus.style.display = 'none';

            try {
                // 1. Get client token from proxy
                const tokenResponse = await fetch(`${PROXY_URL}?auth=token`, {
                    headers: { 'X-Proxy-Secret': SHARED_SECRET }
                });
                if (!tokenResponse.ok) throw new Error('خطا در دریافت توکن احراز هویت.');
                
                const tokenData = await tokenResponse.json();
                const clientToken = tokenData.token;

                // 2. Prepare user data
                const userData = {
                    displayName: inputs.displayName.value.trim(),
                    username: inputs.username.value.trim(),
                    mobile: inputs.mobile.value.trim(),
                    age: parseInt(inputs.age.value),
                    gender: inputs.gender.value,
                    bio: document.getElementById('bio').value.trim(),
                    interests: document.getElementById('interests').value.trim().split('،').map(i => i.trim()),
                    // Note: We are not sending the password directly to Firebase. 
                    // In a real app, password should be hashed on a secure server.
                    // For this proxy example, we just don't include it in the public user profile.
                    createdAt: new Date().toISOString()
                };

                // In a real app, you would also handle the profile picture upload, 
                // get a URL, and add it to userData. That's a more complex process.

                // 3. Send data to Firebase via proxy
                const registerResponse = await fetch(`${PROXY_URL}?path=users/${userData.username}`, {
                    method: 'PUT', // PUT creates or overwrites the data at the specified path
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${clientToken}`
                    },
                    body: JSON.stringify(userData)
                });

                if (!registerResponse.ok) {
                    const errorData = await registerResponse.json();
                    throw new Error(errorData.error || 'خطا در ثبت اطلاعات در سرور.');
                }
                
                // Success
                formStatus.textContent = 'ثبت‌نام با موفقیت انجام شد! به زودی منتقل می‌شوید...';
                formStatus.className = 'success';
                formStatus.style.display = 'block';
                form.reset();
                profilePreview.src = 'data:image/svg+xml;...'; // Reset preview
                
            } catch (error) {
                formStatus.textContent = error.message;
                formStatus.className = 'error';
                formStatus.style.display = 'block';
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'ثبت‌نام';
            }
        }
    </script>
</body>
</html>
